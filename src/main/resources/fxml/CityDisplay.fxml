<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root type="VBox" spacing="10"
         xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
    <padding><Insets topRightBottomLeft="5"/></padding>
    <Label fx:id="cityInformationLabel" text="City information" textAlignment="CENTER" style="-fx-font-size: 130%"/>
    <GridPane hgap="10" vgap="10">
        <Label GridPane.columnIndex="0" GridPane.rowIndex="0"
                text="ID:"/>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="0"
                editable="false" fx:id="idLabel"/>
        <Label GridPane.columnIndex="0" GridPane.rowIndex="1"
                text="Name:"/>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="1"
                    editable="false" fx:id="nameLabel"/>
        <Label GridPane.columnIndex="0" GridPane.rowIndex="2"
                text="Country:"/>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="2"
                    editable="false" fx:id="countryLabel"/>
        <Label GridPane.columnIndex="0" GridPane.rowIndex="3"
                text="Coordinates:"/>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="3"
                   editable="false" fx:id="coordinatesLabel"/>
    </GridPane>
</fx:root>
